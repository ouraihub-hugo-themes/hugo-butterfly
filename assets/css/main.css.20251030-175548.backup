/**
 * Hugo Butterfly Theme - Main CSS
 * Using Tailwind CSS v4
 */

/* stylelint-disable at-rule-no-unknown */
@import "tailwindcss";

/* ========================================
   主题设计令牌 (Design Tokens)
   ======================================== */
@theme {
  /* 主题色 - 对应 Butterfly 的 $bright-blue */
  --color-primary: #49B1F5;
  --color-primary-hover: #3da8f5;
  --color-primary-light: #e8f4fd;
  
  /* 强调色 - 对应 $strong-cyan */
  --color-accent: #00c4b6;
  --color-accent-hover: #00b3a6;
  
  /* 辅助色 */
  --color-orange: #FF7242;
  --color-red: #F47466;
  --color-purple: #6f42c1;
  --color-green: #5cb85c;
  
  /* 灰度色系 */
  --color-gray-50: #f6f8fa;
  --color-gray-100: #f0f0f0;
  --color-gray-200: #e1e1e1;
  --color-gray-300: #cacaca;
  --color-gray-400: #999999;
  --color-gray-500: #858585;
  --color-gray-600: #666261;
  --color-gray-700: #4C4948;
  --color-gray-800: #2b2b2b;
  --color-gray-900: #1F2D3D;
  
  /* 卡片背景 */
  --color-card-bg: #ffffff;
  --color-card-border: #f0f0f0;
  
  /* 字体系统 */
  --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', 
               Lato, Roboto, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  --font-mono: Consolas, Menlo, Monaco, 'Courier New', monospace;
  
  /* 字体大小 */
  --font-size-xs: 0.75rem;    /* 12px */
  --font-size-sm: 0.875rem;   /* 14px */
  --font-size-base: 1rem;     /* 16px */
  --font-size-lg: 1.125rem;   /* 18px */
  --font-size-xl: 1.25rem;    /* 20px */
  --font-size-2xl: 1.5rem;    /* 24px */
  --font-size-3xl: 1.875rem;  /* 30px */
  --font-size-4xl: 2.25rem;   /* 36px */
  
  /* 圆角 */
  --radius-sm: 0.25rem;       /* 4px */
  --radius-md: 0.5rem;        /* 8px */
  --radius-lg: 0.75rem;       /* 12px */
  --radius-xl: 1rem;          /* 16px */
  --radius-2xl: 1.5rem;       /* 24px */
  
  /* 阴影 */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  
  /* 过渡动画 */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

/* 暗色模式变量 */
@media (prefers-color-scheme: dark) {
  @theme {
    --color-card-bg: #1a1a1a;
    --color-card-border: #2d2d2d;
    --color-gray-50: #2b2b2b;
    --color-gray-100: #353535;
  }
}

/* ========================================
   基础样式 (Base Styles)
   ======================================== */
@layer base {
  html {
    scroll-behavior: smooth;
    font-size: 14px;
  }
  
  /* 暗色模式平滑过渡 */
  html.theme-transitioning,
  html.theme-transitioning *,
  html.theme-transitioning *::before,
  html.theme-transitioning *::after {
    transition: background-color 300ms ease-in-out,
                border-color 300ms ease-in-out,
                color 300ms ease-in-out,
                fill 300ms ease-in-out,
                stroke 300ms ease-in-out !important;
    transition-delay: 0s !important;
  }
  
  body {
    @apply font-sans text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-900;
    line-height: 2;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* 选中文本样式 */
  ::selection {
    background-color: var(--color-accent);
    color: white;
  }
  
  /* 滚动条样式 */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: var(--color-gray-100);
  }
  
  ::-webkit-scrollbar-thumb {
    background: var(--color-primary);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: var(--color-primary-hover);
  }
}

/* ========================================
   组件样式 (Component Styles)
   ======================================== */
@layer components {
  /* 卡片样式 */
  .card {
    @apply bg-white dark:bg-gray-800 rounded-xl shadow-md 
           border border-gray-200 dark:border-gray-700 
           transition-all duration-300;
  }
  
  .card-hover {
    @apply hover:shadow-xl hover:-translate-y-1;
  }
  
  /* 按钮样式 */
  .btn {
    @apply px-6 py-3 rounded-lg font-medium 
           transition-all duration-200 
           inline-flex items-center justify-center;
  }
  
  .btn-primary {
    @apply bg-primary hover:bg-primary-hover 
           text-white shadow-md hover:shadow-lg;
  }
  
  .btn-secondary {
    @apply bg-transparent border-2 border-primary 
           text-primary hover:bg-primary hover:text-white;
  }
  
  /* 链接样式 */
  .link {
    @apply text-primary hover:text-primary-hover 
           transition-colors duration-200;
  }
  
  /* 容器 */
  .container {
    @apply mx-auto px-4 sm:px-6 lg:px-8;
    max-width: 1280px;
  }
  
  /* ========================================
     导航栏样式
     ======================================== */
  
  /* 导航栏背景 - 半透明毛玻璃效果 */
  #page-header {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  #page-header.dark,
  .dark #page-header {
    background: rgba(17, 24, 39, 0.8);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  /* 菜单项样式 */
  .site-page {
    position: relative;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
  
  /* 桌面端菜单项悬停效果 */
  .menus_item > a.site-page::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-primary);
    transition: width 0.3s ease-in-out;
  }
  
  .menus_item > a.site-page:hover::after {
    width: 100%;
  }
  
  /* 子菜单下拉动画 */
  .menus_item_child {
    transform-origin: top;
    animation: slideDown 0.3s ease-out;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* 子菜单箭头指示器 */
  .menus_item_child::before {
    content: '';
    position: absolute;
    top: -6px;
    right: 20px;
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 6px solid white;
  }
  
  .dark .menus_item_child::before {
    border-bottom-color: rgb(31, 41, 55);
  }
  
  /* 移动端菜单滚动条 */
  #sidebar-menus {
    scrollbar-width: thin;
    scrollbar-color: var(--color-primary) transparent;
  }
  
  #sidebar-menus::-webkit-scrollbar {
    width: 6px;
  }
  
  #sidebar-menus::-webkit-scrollbar-track {
    background: transparent;
  }
  
  #sidebar-menus::-webkit-scrollbar-thumb {
    background: var(--color-primary);
    border-radius: 3px;
  }
  
  /* 移动端子菜单展开动画 */
  .mobile-submenu {
    transition: max-height 0.3s ease-in-out;
  }
  
  /* 响应式菜单切换 */
  @media (max-width: 1023px) {
    #nav.hide-menu .menus_items {
      display: none;
    }
    
    #nav.hide-menu #toggle-menu {
      display: block;
    }
  }
  
  /* ========================================
     Hero 区域样式
     ======================================== */
  
  #page-header-hero {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    background-attachment: fixed;
  }
  
  /* 移动端禁用视差效果 */
  @media (max-width: 768px) {
    #page-header-hero {
      height: 80vh;
      min-height: 500px;
      background-attachment: scroll;
    }
  }
  
  /* Hero 内容样式 */
  #site-info {
    z-index: 10;
  }
  
  #site-title {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 0.8s ease-out;
  }
  
  #site-subtitle {
    animation: fadeInUp 1s ease-out 0.2s both;
  }
  
  #site-social-icons {
    animation: fadeInUp 1.2s ease-out 0.4s both;
  }
  
  #scroll-down {
    z-index: 10;
    animation: fadeIn 1.5s ease-out 0.6s both;
  }
  
  /* Hero 动画 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  /* ========================================
     文章卡片样式
     ======================================== */
  
  /* 文章列表容器 */
  #recent-posts {
    margin-bottom: 2rem;
  }
  
  .recent-post-items {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  
  /* 瀑布流布局 */
  .recent-post-items.masonry {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  
  @media (max-width: 768px) {
    .recent-post-items.masonry {
      grid-template-columns: 1fr;
    }
  }
  
  @media (min-width: 2000px) {
    .recent-post-items.masonry {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  /* 基础卡片样式 */
  .recent-post-item {
    position: relative;
    overflow: hidden;
    margin-bottom: 0;
    background-color: white;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    border: 1px solid var(--color-gray-200);
    transition: all 0.3s ease;
  }
  
  .dark .recent-post-item {
    background-color: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }
  
  .recent-post-item:hover {
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
    transform: translateY(-4px);
  }
  
  /* 横向布局 (Layout 1, 2, 3) */
  .recent-post-item.layout-horizontal {
    display: flex;
    flex-direction: row;
    align-items: center;
    min-height: 16.8rem;
  }
  
  .recent-post-item.layout-horizontal .post-cover {
    width: 42%;
    height: 100%;
    flex-shrink: 0;
  }
  
  .recent-post-item.layout-horizontal .post-cover.right {
    order: 1;
  }
  
  .recent-post-item.layout-horizontal .recent-post-info {
    padding: 0 2.5rem;
    width: 58%;
    flex: 1;
  }
  
  .recent-post-item.layout-horizontal .recent-post-info.no-cover {
    width: 100%;
    padding: 2rem 2.5rem;
  }
  
  /* 纵向布局 (Layout 4, 6) */
  .recent-post-item.layout-vertical {
    display: flex;
    flex-direction: column;
  }
  
  .recent-post-item.layout-vertical .post-cover {
    width: 100%;
    height: 14.375rem;
  }
  
  .recent-post-item.layout-vertical .recent-post-info {
    padding: 1.875rem 1.875rem 1.5625rem;
  }
  
  .recent-post-item.layout-vertical .recent-post-info.no-cover {
    padding: 2.1875rem 1.875rem;
  }
  
  /* 覆盖布局 (Layout 5, 7) */
  .recent-post-item.layout-overlay {
    display: flex;
    flex-direction: column;
    position: relative;
  }
  
  .recent-post-item.layout-overlay .post-cover {
    width: 100%;
    height: 17rem;
  }
  
  .recent-post-item.layout-overlay .post-cover::before {
    content: '';
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(18, 18, 18, 0.4);
    backdrop-filter: blur(3px);
  }
  
  .recent-post-item.layout-overlay .recent-post-info:not(.no-cover) {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    z-index: 2;
    width: 100%;
    padding: 1.875rem 1.875rem 1.5625rem;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 1);
  }
  
  .recent-post-item.layout-overlay .recent-post-info:not(.no-cover) .article-title {
    color: rgba(255, 255, 255, 1);
  }
  
  .recent-post-item.layout-overlay .recent-post-info:not(.no-cover) .article-meta-wrap {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .recent-post-item.layout-overlay .recent-post-info:not(.no-cover) .article-meta-wrap a {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .recent-post-item.layout-overlay .recent-post-info.no-cover {
    position: relative;
    padding: 2.1875rem 1.875rem;
  }
  
  /* 封面图片样式 */
  .post-cover {
    position: relative;
    overflow: hidden;
  }
  
  .post-cover a {
    display: block;
    width: 100%;
    height: 100%;
  }
  
  .post-cover img.post-bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .recent-post-item:hover .post-cover img.post-bg {
    transform: scale(1.1);
  }
  
  /* 文章信息区域 */
  .recent-post-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  /* 文章标题样式 */
  .article-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(17, 24, 39);
    line-height: 1.4;
    transition: color 0.2s ease-in-out;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .dark .article-title {
    color: white;
  }
  
  .article-title:hover {
    color: var(--color-primary);
  }
  
  /* 置顶图标 */
  .article-title .sticky {
    margin-right: 0.625rem;
    color: var(--color-orange);
    transform: rotate(45deg);
    display: inline-block;
  }
  
  /* 文章元信息样式 */
  .article-meta-wrap {
    color: rgb(75, 85, 99);
    font-size: 0.9em;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.25rem;
    margin: 0.375rem 0;
  }
  
  .dark .article-meta-wrap {
    color: rgb(156, 163, 175);
  }
  
  .article-meta-wrap i {
    margin-right: 0.25rem;
  }
  
  .article-meta-wrap .fa-spinner {
    margin: 0;
  }
  
  .article-meta-separator {
    margin: 0 0.375rem;
    color: var(--color-gray-400);
  }
  
  .article-meta-link {
    margin: 0 0.25rem;
  }
  
  .article-meta-label {
    margin-right: 0.25rem;
  }
  
  .article-meta-wrap a {
    color: rgb(75, 85, 99);
    transition: color 0.2s ease-in-out;
  }
  
  .dark .article-meta-wrap a {
    color: rgb(156, 163, 175);
  }
  
  .article-meta-wrap a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  
  /* 文章内容摘要 */
  .recent-post-info .content {
    color: rgb(55, 65, 81);
    line-height: 1.8;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-break: break-word;
  }
  
  .dark .recent-post-info .content {
    color: rgb(209, 213, 219);
  }
  
  /* 响应式布局 - 移动端 */
  @media (max-width: 768px) {
    .recent-post-item.layout-horizontal {
      flex-direction: column;
      min-height: auto;
    }
    
    .recent-post-item.layout-horizontal .post-cover {
      width: 100%;
      height: 14.375rem;
      order: 0 !important;
    }
    
    .recent-post-item.layout-horizontal .recent-post-info {
      width: 100%;
      padding: 1.25rem 1.25rem 1.875rem;
    }
    
    .recent-post-item.layout-horizontal .recent-post-info.no-cover {
      padding: 1.875rem 1.25rem;
    }
    
    .recent-post-item.layout-vertical .post-cover,
    .recent-post-item.layout-overlay .post-cover {
      height: 12.5rem;
    }
    
    .article-title {
      font-size: 1.43em;
    }
    
    .article-meta-wrap {
      font-size: 0.85em;
    }
  }
  
  /* 响应式布局 - 大屏幕 */
  @media (min-width: 2000px) {
    .recent-post-item.layout-horizontal {
      min-height: 18.8rem;
    }
  }
  
  /* ========================================
     右侧工具栏样式
     ======================================== */
  
  #rightside {
    position: fixed;
    right: 20px;
    bottom: 40px;
    z-index: 100;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  #rightside-config-hide,
  #rightside-config-show {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  #rightside button,
  #rightside a {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(73, 177, 245, 0.3);
  }
  
  #rightside button:hover,
  #rightside a:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(73, 177, 245, 0.4);
  }
  
  /* 返回顶部按钮特殊样式 */
  #go-up {
    position: relative;
  }
  
  #go-up .scroll-percent {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 12px;
    font-weight: bold;
    display: none;
  }
  
  #go-up.show-percent .scroll-percent {
    display: block;
  }
  
  #go-up.show-percent i {
    display: none;
  }
  
  /* 隐藏状态 */
  #rightside button.hide,
  #rightside a.hide {
    opacity: 0;
    pointer-events: none;
    transform: translateX(100px);
  }
  
  /* 移动端适配 */
  @media (max-width: 768px) {
    #rightside {
      right: 10px;
      bottom: 20px;
    }
    
    #rightside button,
    #rightside a {
      width: 36px;
      height: 36px;
      font-size: 14px;
    }
  }
  
  /* 暗色模式 */
  .dark #rightside button,
  .dark #rightside a {
    background: rgba(73, 177, 245, 0.8);
  }
  
  .dark #rightside button:hover,
  .dark #rightside a:hover {
    background: var(--color-primary);
  }
  
  /* ========================================
     分页样式
     参考: hexo-theme-butterfly/source/css/_layout/pagination.styl
     ======================================== */
  
  #pagination {
    margin-top: 2.5rem;
    margin-bottom: 2rem;
  }
  
  .pagination-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
  }
  
  /* 分页按钮和页码通用样式 */
  .pagination-btn,
  .page-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    height: 2.5rem;
    padding: 0 0.75rem;
    background: white;
    color: rgb(55, 65, 81);
    border-radius: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid var(--color-gray-200);
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    user-select: none;
  }
  
  .dark .pagination-btn,
  .dark .page-number {
    background: rgb(31, 41, 55);
    color: rgb(209, 213, 219);
    border-color: rgb(55, 65, 81);
  }
  
  /* 悬停效果 */
  .pagination-btn:not(.disabled):hover,
  .page-number:not(.current):hover {
    background: var(--color-primary-light);
    color: var(--color-primary);
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }
  
  .dark .pagination-btn:not(.disabled):hover,
  .dark .page-number:not(.current):hover {
    background: rgba(73, 177, 245, 0.1);
    color: var(--color-primary);
    border-color: var(--color-primary);
  }
  
  /* 当前页样式 */
  .page-number.current {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    cursor: default;
    box-shadow: 0 2px 4px rgba(73, 177, 245, 0.3);
  }
  
  .dark .page-number.current {
    background: var(--color-primary);
    color: white;
  }
  
  /* 禁用状态 */
  .pagination-btn.disabled {
    opacity: 0.4;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  /* 省略号样式 */
  .pagination-numbers .space {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    height: 2.5rem;
    color: rgb(156, 163, 175);
    font-weight: 500;
    user-select: none;
  }
  
  .dark .pagination-numbers .space {
    color: rgb(107, 114, 128);
  }
  
  /* 页码列表容器 */
  .pagination-numbers {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }
  
  /* 上一页/下一页按钮图标 */
  .pagination-btn i {
    font-size: 0.875rem;
  }
  
  /* 移动端适配 */
  @media (max-width: 640px) {
    #pagination {
      margin-top: 2rem;
    }
    
    .pagination-container {
      gap: 0.25rem;
    }
    
    .pagination-btn,
    .page-number {
      min-width: 2.25rem;
      height: 2.25rem;
      padding: 0 0.5rem;
      font-size: 0.875rem;
    }
    
    .pagination-numbers .space {
      min-width: 2.25rem;
      height: 2.25rem;
    }
    
    /* 移动端隐藏部分页码 */
    .pagination-numbers .page-number:not(.current) {
      display: none;
    }
    
    /* 只显示当前页和相邻页 */
    .pagination-numbers .page-number.current,
    .pagination-numbers .page-number.current + .page-number,
    .pagination-numbers .page-number:has(+ .page-number.current) {
      display: inline-flex;
    }
    
    /* 始终显示第一页和最后一页 */
    .pagination-numbers .page-number:first-of-type,
    .pagination-numbers .page-number:last-of-type {
      display: inline-flex;
    }
  }
  
  /* 平板适配 */
  @media (min-width: 641px) and (max-width: 1024px) {
    .pagination-btn,
    .page-number {
      min-width: 2.375rem;
      height: 2.375rem;
    }
  }
  
  /* 分页包装器 */
  .pagination-wrapper {
    margin-top: 2rem;
  }
  
  /* ========================================
     文章详情页样式
     ======================================== */
  
