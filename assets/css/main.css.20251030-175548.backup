    height: 100%;
    object-fit: cover;
  }
  
  @media (max-width: 768px) {
    .post-cover-wrapper {
      height: 300px;
    }
  }
  
  /* 文章容器 */
  .post-container {
    max-width: 1400px;
  }
  
  /* 文章标题 */
  .post-title {
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }
  
  /* 文章元信息图标 */
  .post-meta-icon {
    color: var(--color-primary);
  }
  
  /* 文章内容区域 */
  .post-content-wrapper {
    background: white;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }
  
  .dark .post-content-wrapper {
    background: rgb(31, 41, 55);
  }
  
  @media (max-width: 768px) {
    .post-content-wrapper {
      padding: 1.5rem;
    }
  }
  
  /* 文章内容 Prose 样式增强 */
  .post-content {
    font-size: 1.0625rem;
    line-height: 1.8;
  }
  
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    position: relative;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }
  
  .post-content h1::before,
  .post-content h2::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 70%;
    background: var(--color-primary);
    border-radius: 2px;
  }
  
  .post-content a {
    text-decoration: underline;
    text-decoration-color: var(--color-primary);
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
  }
  
  .post-content img {
    cursor: zoom-in;
  }
  
  .post-content pre {
    position: relative;
    margin: 1.5rem 0;
  }
  
  .post-content pre code {
    background: transparent !important;
    padding: 0 !important;
  }
  
  .post-content blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
  }
  
  .post-content table {
    display: block;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  /* 侧边栏卡片间距 */
  .sidebar-wrapper > * + * {
    margin-top: 1.5rem;
  }
  
  /* ========================================
     侧边栏容器样式
     参考: hexo-theme-butterfly/source/css/_layout/aside.styl
     ======================================== */
  
  /* 侧边栏容器 */
  #aside-content {
    width: 100%;
  }
  
  /* 桌面端侧边栏宽度和间距 */
  @media (min-width: 1024px) {
    #aside-content {
      width: 26%;
      flex-shrink: 0;
    }
    
    #aside-content.aside-right {
      padding-left: 0.9375rem;
    }
    
    #aside-content.aside-left {
      padding-right: 0.9375rem;
      order: -1;
    }
  }
  
  /* 移动端侧边栏 */
  @media (max-width: 1023px) {
    #aside-content {
      margin-top: 1.25rem;
      width: 100%;
    }
    
    /* 移动端隐藏侧边栏选项 */
    #aside-content.hide-mobile .card-widget:not(#card-toc) {
      display: none;
    }
  }
  
  /* 卡片组件通用样式 */
  .card-widget {
    position: relative;
    overflow: hidden;
    margin-bottom: 1.25rem;
    padding: 1.25rem 1.5rem;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    border: 1px solid var(--color-gray-200);
    transition: all 0.3s ease;
  }
  
  .dark .card-widget {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }
  
  .card-widget:hover {
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    transform: translateY(-2px);
  }
  
  /* 最后一个卡片不需要底部间距 */
  .card-widget:last-child {
    margin-bottom: 0;
  }
  
  /* Sticky 布局容器 */
  .sticky_layout {
    display: flex;
    flex-direction: column;
  }
  
  @media (min-width: 1024px) {
    .sticky_layout {
      position: sticky;
      position: -webkit-sticky;
      top: 5rem;
      transition: top 0.3s ease;
    }
    
    /* 当导航栏固定时调整 top 值 */
    .nav-fixed .sticky_layout {
      top: 6rem;
    }
  }
  
  /* 当 sticky_layout 是唯一子元素时，第一个卡片不需要顶部间距 */
  .sticky_layout:only-child > .card-widget:first-child {
    margin-top: 0;
  }
  
  /* 卡片标题样式 */
  .card-widget .item-headline {
    padding-bottom: 0.375rem;
    font-size: 1.2em;
    font-weight: 600;
    color: rgb(17, 24, 39);
    margin-bottom: 0.75rem;
  }
  
  .dark .card-widget .item-headline {
    color: white;
  }
  
  .card-widget .item-headline i {
    margin-right: 0.375rem;
    color: var(--color-primary);
  }
  
  /* 卡片内容列表样式 */
  .aside-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .aside-list > span {
    display: block;
    margin-bottom: 0.625rem;
    text-align: center;
    color: rgb(107, 114, 128);
  }
  
  .dark .aside-list > span {
    color: rgb(156, 163, 175);
  }
  
  .aside-list-item {
    display: flex;
    align-items: center;
    padding: 0.375rem 0;
  }
  
  .aside-list-item:first-child {
    padding-top: 0;
  }
  
  .aside-list-item:not(:last-child) {
    border-bottom: 1px dashed var(--color-gray-200);
  }
  
  .dark .aside-list-item:not(:last-child) {
    border-bottom-color: rgb(55, 65, 81);
  }
  
  .aside-list-item:last-child {
    padding-bottom: 0;
  }
  
  /* 缩略图样式 */
  .aside-list-item .thumbnail {
    overflow: hidden;
    width: 4em;
    height: 4em;
    border-radius: 0.375rem;
    flex-shrink: 0;
  }
  
  .aside-list-item .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .aside-list-item:hover .thumbnail img {
    transform: scale(1.1);
  }
  
  /* 列表项内容 */
  .aside-list-item .content {
    flex: 1;
    padding-left: 0.625rem;
    word-break: break-all;
  }
  
  .aside-list-item .content .name,
  .aside-list-item .content time {
    display: block;
    color: rgb(107, 114, 128);
    font-size: 0.85em;
    line-height: 1.5;
  }
  
  .dark .aside-list-item .content .name,
  .dark .aside-list-item .content time {
    color: rgb(156, 163, 175);
  }
  
  .aside-list-item .content .title,
  .aside-list-item .content .comment {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: rgb(55, 65, 81);
    line-height: 1.5;
    margin-top: 0.25rem;
  }
  
  .dark .aside-list-item .content .title,
  .dark .aside-list-item .content .comment {
    color: rgb(209, 213, 219);
  }
  
  .aside-list-item .content .title:hover {
    color: var(--color-primary);
  }
  
  /* 无缩略图的列表项 */
  .aside-list-item.no-cover {
    min-height: 4.4em;
  }
  
  /* 标签云样式 */
  .card-tag-cloud a {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    margin: 0.25rem;
    color: rgb(75, 85, 99);
    font-size: 0.9em;
    line-height: 1.8;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    background: var(--color-gray-100);
  }
  
  .dark .card-tag-cloud a {
    color: rgb(156, 163, 175);
    background: rgb(55, 65, 81);
  }
  
  .card-tag-cloud a:hover {
    color: white !important;
    background: var(--color-primary);
    transform: translateY(-2px);
  }
  
  /* 归档和分类列表样式 */
  .card-archives ul.card-archive-list,
  .card-categories ul.card-category-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .card-archive-list-item a,
  .card-category-list-item a {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0.125rem 0;
    padding: 0.125rem 0.5rem;
    color: rgb(55, 65, 81);
    border-radius: 0.375rem;
    transition: all 0.3s ease;
  }
  
  .dark .card-archive-list-item a,
  .dark .card-category-list-item a {
    color: rgb(209, 213, 219);
  }
  
  .card-archive-list-item a:hover,
  .card-category-list-item a:hover {
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    background: var(--color-primary);
    color: white;
  }
  
  .card-archive-list-item a span,
  .card-category-list-item a span {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .card-archive-list-item a span:first-child,
  .card-category-list-item a span:first-child {
    flex: 1;
  }
  
  /* 分类展开/折叠功能 */
  .card-categories .card-category-list.child {
    padding-left: 1rem;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    visibility: hidden;
    transition: max-height 0.3s ease, opacity 0.3s ease;
  }
  
  .card-categories .parent > a.expand i {
    transform: rotate(-90deg);
  }
  
  .card-categories .parent > a.expand + .child {
    max-height: 1000px;
    opacity: 1;
    visibility: visible;
  }
  
  .card-categories .card-category-list-name {
    width: 70% !important;
  }
  
  /* ========================================
     作者卡片样式
     参考: hexo-theme-butterfly/source/css/_layout/aside.styl
     ======================================== */
  
  /* 作者卡片容器 */
  .card-info {
    text-align: center;
  }
  
  /* 作者头像 */
  .avatar-img {
    overflow: hidden;
    margin: 0 auto;
    width: 110px;
    height: 110px;
    border-radius: 70px;
  }
  
  .avatar-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 375ms ease-in 0.2s, transform 0.3s ease;
  }
  
  .avatar-img img:hover {
    transform: rotate(360deg);
  }
  
  /* 作者信息 */
  .author-info-name {
    font-weight: 500;
    font-size: 1.57em;
    margin-top: 0.5rem;
  }
  
  .author-info-description {
    margin-top: -0.42em;
    font-size: 0.9em;
  }
  
  /* 网站统计数据 */
  .site-data {
    display: table;
    width: 100%;
    table-layout: fixed;
    margin: 0.875rem 0 0.25rem;
  }
  
  .site-data > a {
    display: table-cell;
    text-decoration: none;
  }
  
  .site-data > a div {
    transition: all 0.3s ease;
  }
  
  .site-data > a:hover div {
    color: var(--color-primary) !important;
  }
  
  .site-data .headline {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 0.95em;
  }
  
  .site-data .length-num {
    margin-top: -0.45em;
    font-size: 1.2em;
  }
  
  /* Follow 按钮 */
  #card-info-btn {
    display: block;
    margin-top: 0.875rem;
    text-align: center;
    line-height: 2.4;
    text-decoration: none;
  }
  
  #card-info-btn span {
    padding-left: 0.625rem;
  }
  
  /* 社交媒体图标 */
  .card-info-social-icons {
    margin: 0.375rem 0 -0.375rem;
  }
  
  .card-info-social-icons .social-icon {
    margin: 0 0.625rem;
    font-size: 1.4em;
    text-decoration: none;
  }
  
  .card-info-social-icons i {
    transition: all 0.3s ease;
  }
  
  .card-info-social-icons i:hover {
    transform: rotate(360deg);
  }
  
  /* 旋转动画 */
  .hover\:rotate-360:hover {
    transform: rotate(360deg);
  }
  
  .card-categories .card-category-list-count {
    width: calc(100% - 70% - 20px);
    text-align: right;
  }
  
  .card-categories .parent > a i {
    float: right;
    margin-right: -0.5em;
    padding: 0.5em;
    transition: transform 0.3s ease;
    transform: rotate(0);
  }
  
  /* 网站信息卡片 */
  .card-webinfo .webinfo-item {
    display: flex;
    align-items: center;
    padding: 0.125rem 0.625rem 0;
  }
  
  .card-webinfo .webinfo-item div:first-child {
    flex: 1;
    padding-right: 1.25rem;
    color: rgb(75, 85, 99);
  }
  
  .dark .card-webinfo .webinfo-item div:first-child {
    color: rgb(156, 163, 175);
  }
  
  .card-webinfo .webinfo-item div:last-child {
    color: rgb(17, 24, 39);
    font-weight: 600;
  }
  
  .dark .card-webinfo .webinfo-item div:last-child {
    color: white;
  }
  
  /* 更多按钮 */
  .card-more-btn {
    float: right;
    color: var(--color-primary);
    font-size: 0.9em;
    transition: transform 0.3s ease;
  }
  
  .card-more-btn:hover {
    animation: more-btn-move 1s infinite;
  }
  
  @keyframes more-btn-move {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(3px);
    }
  }
  
  /* 隐藏侧边栏时的布局调整 */
  @media (min-width: 1024px) {
    html.hide-aside .layout {
      justify-content: center;
    }
    
    html.hide-aside .layout > #aside-content {
      display: none;
    }
    
    html.hide-aside .layout > div:first-child {
      width: 80%;
      max-width: 1200px;
    }
  }
  
  /* ========================================
     TOC (目录) 样式
     参考: hexo-theme-butterfly/source/css/_layout/aside.styl (#card-toc)
     ======================================== */
  
  #card-toc {
    background: white;
    border-radius: 0.75rem;
    padding: 1.25rem 1.5rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    border: 1px solid var(--color-gray-200);
  }
  
  .dark #card-toc {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }
  
  /* 桌面端固定定位 */
  @media (min-width: 1024px) {
    #card-toc {
      position: sticky;
      top: 6rem;
      max-height: calc(100vh - 8rem);
    }
  }
  
  /* 移动端浮动显示 */
  @media (max-width: 1023px) {
    #card-toc {
      position: fixed;
      right: 55px;
      bottom: 30px;
      z-index: 100;
      max-width: 320px;
      max-height: calc(100% - 60px);
      width: 280px;
      transform: scale(0);
      transform-origin: right bottom;
      transition: transform 0.3s ease;
    }
    
    #card-toc.open {
      transform: scale(1);
    }
  }
  
  /* TOC 标题栏 */
  #card-toc .item-headline {
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-gray-200);
    margin-bottom: 0.75rem;
  }
  
  .dark #card-toc .item-headline {
    border-bottom-color: rgb(55, 65, 81);
  }
  
  /* 阅读进度百分比 */
  .toc-percentage {
    font-size: 1.25rem;
    font-style: italic;
    color: rgb(156, 163, 175);
    font-weight: 500;
  }
  
  .dark .toc-percentage {
    color: rgb(107, 114, 128);
  }
  
  /* TOC 内容区域 */
  .toc-content {
    overflow-y: auto;
    overflow-y: overlay;
    max-height: calc(100vh - 12rem);
    padding-right: 0.5rem;
  }
  
  @media (max-width: 1023px) {
    .toc-content {
      max-height: calc(100vh - 140px);
    }
  }
  
  /* 自定义滚动条 */
  .toc-content::-webkit-scrollbar {
    width: 6px;
  }
  
  .toc-content::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .toc-content::-webkit-scrollbar-thumb {
    background: var(--color-gray-300);
    border-radius: 3px;
  }
  
  .toc-content::-webkit-scrollbar-thumb:hover {
    background: var(--color-gray-400);
  }
  
  .dark .toc-content::-webkit-scrollbar-thumb {
    background: rgb(75, 85, 99);
  }
  
  .dark .toc-content::-webkit-scrollbar-thumb:hover {
    background: rgb(107, 114, 128);
  }
  
  /* TOC 列表样式 */
  .toc-content nav > ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc-content ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }
  
  .toc-content ul ul {
    padding-left: 1.125rem;
    margin-left: 0.625rem;
    border-left: 1px solid var(--color-gray-300);
  }
  
  .dark .toc-content ul ul {
    border-left-color: rgb(75, 85, 99);
  }
  
  .toc-content li {
    margin: 0.25rem 0;
  }
  
  /* TOC 链接样式 */
  .toc-content a {
    display: block;
    padding: 0.25rem 0.5rem;
    color: rgb(75, 85, 99);
    font-size: 0.9rem;
    line-height: 1.6;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    word-break: break-word;
  }
  
  .dark .toc-content a {
    color: rgb(156, 163, 175);
  }
  
  .toc-content a:hover {
    color: var(--color-primary);
    background: var(--color-primary-light);
  }
  
  .dark .toc-content a:hover {
    background: rgba(73, 177, 245, 0.1);
  }
  
  /* 活动链接样式 */
  .toc-content a.active {
    color: white;
    background: var(--color-primary);
    font-weight: 500;
  }
  
  .dark .toc-content a.active {
    color: white;
    background: var(--color-primary);
  }
  
  /* 移动端 TOC 切换按钮（如果需要） */
  #toc-toggle-btn {
    position: fixed;
    right: 20px;
    bottom: 90px;
    z-index: 99;
    display: none;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(73, 177, 245, 0.3);
  }
  
  @media (max-width: 1023px) {
    #toc-toggle-btn {
      display: flex;
    }
  }
  
  #toc-toggle-btn:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(73, 177, 245, 0.4);
  }
  
  .dark #toc-toggle-btn {
    background: rgba(73, 177, 245, 0.8);
  }
  
  .dark #toc-toggle-btn:hover {
    background: var(--color-primary);
  }
  
  /* ========================================
     列表页样式
     参考: hexo-theme-butterfly/source/css/_page/common.styl
     ======================================== */
  
  /* 列表页容器 */
  .list-page {
    width: 100%;
  }
  
  /* 列表页标题区域 */
  .list-header {
    margin-bottom: 2rem;
    padding: 2rem;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    border: 1px solid var(--color-gray-200);
    text-align: center;
  }
  
  .dark .list-header {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }
  
  .list-title {
    font-size: 2rem;
    font-weight: 700;
    color: rgb(17, 24, 39);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .dark .list-title {
    color: white;
  }
  
  .list-title i {
    color: var(--color-primary);
  }
  
  .list-description {
    color: rgb(107, 114, 128);
    font-size: 1rem;
    line-height: 1.6;
    margin-top: 0.5rem;
  }
  
  .dark .list-description {
    color: rgb(156, 163, 175);
  }
  
  .list-count {
    margin-top: 1rem;
    color: rgb(107, 114, 128);
    font-size: 0.9rem;
  }
  
  .dark .list-count {
    color: rgb(156, 163, 175);
  }
  
  .list-count i {
    margin-right: 0.375rem;
    color: var(--color-primary);
  }
  
  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: rgb(156, 163, 175);
  }
  
  .dark .empty-state {
    color: rgb(107, 114, 128);
  }
  
  .empty-state i {
    margin-bottom: 1rem;
    color: rgb(209, 213, 219);
  }
  
  .dark .empty-state i {
    color: rgb(75, 85, 99);
  }
  
  .empty-state p {
    font-size: 1.125rem;
  }
  
  /* ========================================
     文章时间线排序样式
     参考: hexo-theme-butterfly/layout/includes/mixins/article-sort.pug
     ======================================== */
  
  .article-sort-container {
    background: white;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
    border: 1px solid var(--color-gray-200);
  }
  
  .dark .article-sort-container {
    background: rgb(31, 41, 55);
    border-color: rgb(55, 65, 81);
  }
  
  .article-sort {
    position: relative;
    margin-left: 0.5rem;
  }
  
  /* 时间线左侧竖线 */
  .article-sort::before {
    content: '';
    position: absolute;
    left: 0.25rem;
    top: 0.625rem;
    bottom: 0.625rem;
    width: 2px;
    background: var(--color-gray-200);
  }
  
  .dark .article-sort::before {
    background: rgb(55, 65, 81);
  }
  
  /* 年份标题 */
  .article-sort-item.year {
    position: relative;
    margin: 1.5rem 0;
    padding-left: 2.5rem;
  }
  
  .article-sort-item.year:first-child {
    margin-top: 0;
  }
  
  .article-sort-item.year::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0.625rem;
    height: 0.625rem;
    background: var(--color-primary);
    border-radius: 50%;
    box-shadow: 0 0 0 3px rgba(73, 177, 245, 0.2);
  }
  
  .year-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  /* 文章项 */
  .article-sort-item:not(.year) {
    position: relative;
    display: flex;
    align-items: center;
    margin: 0.75rem 0;
    padding: 0.75rem;
    padding-left: 2.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }
  
  .article-sort-item:not(.year):hover {
    background: var(--color-gray-50);
    transform: translateX(4px);
  }
  
  .dark .article-sort-item:not(.year):hover {
    background: rgb(55, 65, 81);
  }
  
  /* 文章项时间线圆点 */
  .article-sort-item:not(.year)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0.625rem;
    height: 0.625rem;
    background: white;
    border: 2px solid var(--color-primary);
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .dark .article-sort-item:not(.year)::before {
    background: rgb(31, 41, 55);
  }
  
  .article-sort-item:not(.year):hover::before {
    background: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(73, 177, 245, 0.2);
  }
  
  /* 文章封面缩略图 */
  .article-sort-item-img {
    width: 5rem;
    height: 3.5rem;
    border-radius: 0.375rem;
    overflow: hidden;
    flex-shrink: 0;
    margin-right: 1rem;
  }
  
  .article-sort-item-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .article-sort-item:hover .article-sort-item-img img {
    transform: scale(1.1);
  }
  
  /* 无封面样式 */
  .article-sort-item.no-article-cover .article-sort-item-img {
    display: none;
  }
  
  /* 文章信息 */
  .article-sort-item-info {
    flex: 1;
    min-width: 0;
  }
  
  /* 文章日期 */
  .article-sort-item-time {
    display: flex;
    align-items: center;
    color: rgb(107, 114, 128);
    font-size: 0.875rem;
    margin-bottom: 0.375rem;
  }
  
  .dark .article-sort-item-time {
    color: rgb(156, 163, 175);
  }
  
  .article-sort-item-time i {
    margin-right: 0.375rem;
    color: var(--color-primary);
  }
  
  /* 文章标题 */
  .article-sort-item-title {
    display: block;
    color: rgb(55, 65, 81);
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transition: color 0.2s ease;
  }
  
  .dark .article-sort-item-title {
    color: rgb(209, 213, 219);
  }
  
  .article-sort-item-title:hover {
    color: var(--color-primary);
  }
  
  /* 移动端适配 */
  @media (max-width: 768px) {
    .list-header {
      padding: 1.5rem 1rem;
    }
    
    .list-title {
      font-size: 1.5rem;
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .list-description {
      font-size: 0.9rem;
    }
    
    .article-sort-container {
      padding: 1.5rem 1rem;
    }
    
    .article-sort {
      margin-left: 0;
    }
    
    .article-sort::before {
      left: 0.125rem;
    }
    
    .article-sort-item.year {
      padding-left: 1.5rem;
      margin: 1rem 0;
    }
    
    .article-sort-item.year::before {
      width: 0.5rem;
      height: 0.5rem;
    }
    
    .year-number {
      font-size: 1.25rem;
    }
    
    .article-sort-item:not(.year) {
      padding: 0.5rem;
      padding-left: 1.5rem;
      flex-direction: column;
      align-items: flex-start;
    }
    
    .article-sort-item:not(.year)::before {
      width: 0.5rem;
      height: 0.5rem;
    }
    
    .article-sort-item-img {
      width: 100%;
      height: 10rem;
      margin-right: 0;
      margin-bottom: 0.75rem;
    }
    
    .article-sort-item.no-article-cover {
      flex-direction: row;
    }
    
    .article-sort-item-time {
      font-size: 0.8rem;
    }
    
    .article-sort-item-title {
      white-space: normal;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
  }
}

/* ========================================
   工具类 (Utility Classes)
   ======================================== */
@layer utilities {
  /* 文本截断 */
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    line-clamp: 1;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-clamp: 2;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    line-clamp: 3;
    overflow: hidden;
  }
  
  /* 平滑过渡 */
  .transition-smooth {
    transition: all var(--transition-base);
  }
}

